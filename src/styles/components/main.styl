.section1 {
	text-align: center;

	.container {		
		align-items: center;    
		display: flex;
		flex-direction: column;		
	}
	&__picture {
		padding-bottom: 20px;	
	}
	&__desc {
		lost-column: 10/12;
		lost-offset: 1/12;
		padding-bottom: 20px;
	}
}
.section2 {
	article {
		display: flex;

		+breakpoint(mobile) {
			flex-direction: column;
		}
		& + article {
			padding: 20px 0;	
		}
	}
	&__features {
		lost-column: 1/2 1 0;	

		+breakpoint(mobile) {
			lost-column: 1/1;
		}
	}
	&__list li {
		font-size: 9pt;
		line-height: 14pt;	
	}
	&__banner {
		lost-column: 1/2;

		+breakpoint(mobile) {
			lost-column: 1/1;
		}
	}
	&__block {
		lost-column: 1/3 3 0;

		+breakpoint(mobile) {
			lost-column: 1/1;
			text-align: center;
		}
		&-desc {			
			display: flex;	
			justify-content: space-between;

			+breakpoint(mobile) {
				flex-direction: column;
			}
			p {
				padding: 0 20px;
				width: calc(100% - 60px);

				+breakpoint(mobile) {
					width: 100%;
				}
			}
		}
	}
	&__newsletter {
		lost-column: 10/12;
		lost-offset: 1/12;

		+breakpoint(mobile) {
			lost-column: 1/1;
			lost-offset: clear-left;
		}
	}
	.email-input {
		width: calc(100% - 150px);	

		+breakpoint(mobile) {
			margin-bottom: 20px;
			width: 100%;
		}
	}
}
.section3 {
	text-align: center;

	.container {
		height: auto;
	}
	&__picture {
		padding-bottom: 70px;	
	}
	&__desc {
		padding-bottom: 40px;
	}
}
.section1,
.section3 {
	background: #fff url('/img/bg.png') repeat;	
}