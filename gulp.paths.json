{
	"src": {
		"views": {
			"files": "./src/*.njk",
			"watch": "./src/**/*.njk"
		},
  	"css": {
			"files": [
				"./src/scss/main.scss",
				"./src/components/**/*.scss"
			],
			"all": [
				"./src/scss/**/*.scss",
				"./src/components/**/*.scss"
			]
  	},
		"js": [
			"./src/js/**/*.js",
			"./src/components/**/*.js"
		],
		"img": [
			"./src/images/**/*",
			"./src/components/**/images/**/*"
		]
	},
	"dest": {
		"views": "./dist",
		"css": "./dist/css",
		"js": "./dist/js",
		"img": "./dist/images"
	}
}
